 C1111 
 int max3(int a, int b, int c) {
    if (a >= b && a >= c)
        return a;
    else if (b >= c)
        return b;
    else
        return c;
}


C222

int sumaRango(int a, int b) {
    int suma = 0;
    for (int i = a; i <= b; i++)
        suma += i;
    return suma;
}


C33333

bool contieneDigito(int n, int d) {
    if (n == 0 && d == 0) return true;
    while (n > 0) {
        if (n % 10 == d)
            return true;
        n /= 10;
    }
    return false;
}


C4444

void tablaMultiplicar(int n) {
    for (int i = 1; i <= 10; i++)
        std::cout << n << " x " << i << " = " << n * i << std::endl;
}


